QWidget {
    background-color: #000000;
    color: #FFFFFF;
    font-family: "Inter", "Segoe UI", sans-serif;
    font-size: 15px;
}

QFrame#VideoCard {
    background-color: #000000;
    border: 2px solid #FFFFFF;
    border-radius: 12px;
}

QPushButton {
    background-color: #FFFFFF;
    color: #000000;
    border: 2px solid #FFFFFF;
    padding: 8px 16px;
    border-radius: 18px;
    font-weight: 700;
}

QPushButton:hover {
    background-color: #FFD700;
    color: #000000;
}

QPushButton:pressed {
    background-color: #FFA000;
    color: #000000;
}
