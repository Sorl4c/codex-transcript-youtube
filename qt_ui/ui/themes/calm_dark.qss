QWidget {
    background-color: #1E293B;
    color: #E2E8F0;
    font-family: "Inter", "Segoe UI", sans-serif;
    font-size: 14px;
}

QFrame#VideoCard {
    background-color: #27364D;
    border: 1px solid rgba(148, 163, 184, 0.3);
    border-radius: 16px;
}

QPushButton {
    background-color: rgba(96, 165, 250, 0.2);
    border: none;
    color: rgba(148, 197, 255, 0.95);
    padding: 6px 14px;
    border-radius: 18px;
    font-weight: 600;
}

QPushButton:hover {
    background-color: rgba(96, 165, 250, 0.28);
}

QPushButton:pressed {
    background-color: rgba(96, 165, 250, 0.36);
}
